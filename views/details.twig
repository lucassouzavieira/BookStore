{% extends 'layout.twig' %}


{% block title %}{{ book.get('title') }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3><b>{{ book.get('title') }}</b></h3>
            </div>
            <div class="col-md-6">
                <h3>by <i>{{ book.get('author') }}</i></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h4>{{ book.get('company') }}</h4>
            </div>
            <div class="col-md-6">
                <h4>{{ book.get('edition') }}ยบ edition</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4>Description</h4>
                <p><b>{{ book.get('description') }}</b></p>
            </div>
        </div>
    </div>
{% endblock %}
